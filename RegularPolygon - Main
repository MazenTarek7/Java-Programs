public class RegularPolygon_9_9 {

    public static void main(String[] args) {
        RegularPolygon regularPolygon1 = new RegularPolygon();
        
        RegularPolygon regularPolygon2 = new RegularPolygon(6 , 4);
        
        RegularPolygon regularPolygon3 = new RegularPolygon(10 , 4 , 5.6 , 7.8);
        
        System.out.println("Perimeter & Area of Polygon with no arg-constructor:\n"+"Perimeter: "
        +regularPolygon1.getPerimeter() + " Area: " +regularPolygon1.getArea() +"\n");
        
        System.out.println("Perimeter & Area of Polygon with (6 , 4) arg constructor:\n"+"Perimeter: "
        +regularPolygon2.getPerimeter() + " Area: "+regularPolygon2.getArea()+"\n");
        
        System.out.println("Perimeter & Area of Polygon with (10 , 4 , 5.6 , 7.8) arg constructor:\n"+"Perimeter: "
        +regularPolygon3.getPerimeter() + " Area: "+regularPolygon3.getArea());  
    }
    
}
